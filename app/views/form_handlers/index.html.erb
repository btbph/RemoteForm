
<ul id="msgs">
  <div id = "count">
    <%= Message.count %>
    <%= render 'queries' %>
  </div>
  <% @messages.each do |item| %>
      <li>
        <%= item.text %>
        <%= item.created_at %>
      </li>
  <% end %>
</ul>

<%= form_with(model: @message, url: form_handler_path) do |f| %>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit('Send')%>
    </p>

<% end %>